<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yww.shupian.PhotographerMainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_orange_light">

        <ImageView
            android:id="@+id/return_0"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/return_0"
            android:gravity="center_vertical|start"
            android:text="摄像师"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="276dp"
                android:layout_gravity="center"
                android:background="@mipmap/bkt">

                <ImageView
                    android:id="@+id/imageView33"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="43dp"
                    app:srcCompat="@mipmap/ic_launcher_round" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="330dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="摄影师" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="50dp">

                    <ImageButton
                        android:id="@+id/love"
                        android:layout_width="30dp"
                        android:layout_height="28dp"
                        android:layout_above="@+id/textView6"
                        android:layout_alignEnd="@+id/textView6"
                        android:layout_alignRight="@+id/textView6"
                        android:layout_marginBottom="6dp"
                        android:background="#00000000"
                        android:scaleType="fitXY"
                        app:srcCompat="@mipmap/love" />

                    <ImageButton
                        android:id="@+id/contect"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignBottom="@+id/love"
                        android:layout_alignLeft="@+id/textView7"
                        android:layout_alignStart="@+id/textView7"
                        android:background="#00000000"
                        android:scaleType="fitXY"
                        app:srcCompat="@mipmap/call_ta" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="11dp"
                        android:layout_marginEnd="28dp"
                        android:layout_marginRight="28dp"
                        android:layout_toLeftOf="@+id/imageView20"
                        android:layout_toStartOf="@+id/textView4"
                        android:text="关注" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView6"
                        android:layout_alignBottom="@+id/textView6"
                        android:layout_marginLeft="29dp"
                        android:layout_marginStart="29dp"
                        android:layout_toEndOf="@+id/imageView21"
                        android:layout_toRightOf="@+id/textView4"
                        android:text="找TA" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView2"
                        android:layout_alignBottom="@+id/textView2"
                        android:layout_centerHorizontal="true"
                        android:text="北京航空航天大学" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        style="@style/common_horizontal_division_line_style"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_above="@+id/contect"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="10dp">

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/star_solid" />

                    <ImageView
                        android:id="@+id/imageView20"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_column="2"
                        android:layout_row="0"
                        android:layout_toLeftOf="@+id/imageView13"
                        android:layout_toStartOf="@+id/imageView13"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/star_solid" />

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_column="3"
                        android:layout_row="0"
                        android:layout_toLeftOf="@+id/imageView17"
                        android:layout_toStartOf="@+id/imageView17"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/star_solid" />

                    <ImageView
                        android:id="@+id/imageView22"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_column="5"
                        android:layout_row="0"
                        android:layout_toEndOf="@+id/imageView17"
                        android:layout_toRightOf="@+id/imageView17"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/star_outline" />

                    <ImageView
                        android:id="@+id/imageView21"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_column="4"
                        android:layout_row="0"
                        android:layout_toEndOf="@+id/imageView22"
                        android:layout_toRightOf="@+id/imageView22"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/star_outline" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/imageView20"
                        android:layout_marginLeft="44dp"
                        android:layout_marginStart="44dp"
                        android:layout_marginTop="28dp"
                        android:text="北京" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView4"
                        android:layout_alignBottom="@+id/textView4"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="40dp"
                        android:layout_marginRight="40dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/简介"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"

                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="校园人像摄影师"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        android:typeface="normal" />
                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                style="@style/common_horizontal_division_line_style"
                android:layout_width="match_parent"
                android:layout_height="0.5dp">

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="206dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="0.18"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/Inphotomain_pic1"
                            android:layout_width="186dp"
                            android:layout_height="186dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            app:srcCompat="@mipmap/test_0" />

                        <ImageView
                            android:id="@+id/Inphotomain_pic2"
                            android:layout_width="186dp"
                            android:layout_height="186dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            app:srcCompat="@mipmap/test_1" />

                        <ImageView
                            android:id="@+id/Inphotomain_pic3"
                            android:layout_width="186dp"
                            android:layout_height="186dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@mipmap/test_2" />

                        <ImageView
                            android:id="@+id/Inphotomain_more"
                            android:layout_width="186dp"
                            android:layout_height="186dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            app:srcCompat="@mipmap/more" />
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>